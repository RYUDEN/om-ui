@import './base.styl'
.om-loading
    display: inline-block;
    position: relative;
    width: 28rem;
    height: 28rem;
    &--dark
        border-color: $color-white transparent transparent;
    &--light
        border-color: $color-primary transparent transparent;
    &__ring
        display: inline-block;
        position: relative;
        width: 28rem;
        height: 28rem;
        box-sizing: border-box;
        display: block;
        position: absolute;
        margin: 1PX;
        border-width: 1PX;
        border-style: solid;
        border-radius: 50%;
        animation: loading 1.2s cubic-bezier(.5,0,.5,1) infinite;
        &:nth-child(1)
            animation-delay: -.4s;
        &:nth-child(2)
            animation-delay: -.3s;
        &:nth-child(3)
            animation-delay: -.2s;
    &--large
        width: 32rem;
        height: 32rem;
        &__ring 
            width: 32rem;
            height: 32rem;
    &--small
        width: 24rem;
        height: 24rem;
        &__ring 
            width: 24rem;
            height: 24rem;
@keyframes loading {
    from{
        transform: rotate(0deg);
    }    
    to{
        transform: rotate(360deg);
    }
}