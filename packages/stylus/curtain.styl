@import './transition.styl';
.om-curtain
    top 0
    left 0
    width 100vw
    height 100vh
    position fixed 
    z-index 9999
    display flex
    flex-direction column
    justify-content center
    opacity 1
    &--container
        text-align: center
        z-index 10001
    &--main 
        margin-bottom: 20rem
    &--close.iconfont
        margin-top: 20rem
        font-size: 50rem
        color #fff
.fade-enter-active,.fade-leave-active
    transition: $fade-linear-transition
.fade-enter,.fade-leave-to
    opacity 0