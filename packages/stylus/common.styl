//-7.5rem对应750px宽度设计稿-
html 
    font-size: (100/7.5)vw 


p,div,a,i,h1,h2,h3,h4,.iconfont,span
    font-size: $font-size-base
    box-sizing: border-box
span 
    display: inline-block
.om-mask
    width: 100%
    height 100%
    background #000
    opacity .3
    z-index 10000
    position: absolute
.fade-enter-active,.fade-leave-active
    transition: $fade-linear-transition
.fade-enter,.fade-leave-to
    opacity 0

