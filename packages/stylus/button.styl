@import './base.styl'

.om-button
    padding 10rem 20rem
    border-radius: 5rem
    user-select: none
    &.is-circle
        border-radius: 30rem
    &--large
        font-size: $font-size-lg
        padding 12rem 24rem
        span,.iconfont
            font-size: $font-size-lg
    &--small
        padding 8rem 14rem
        font-size: $font-size-sm
        span,.iconfont
            font-size: $font-size-sm
    &--primary
        color white 
        background-color $color-primary
        text-align: center
        outline: none 
        border 1rem solid $color-primary
        &.outline
            background-color: $color-white
            color $color-primary
    &--success
        color white 
        background-color $color-success
        text-align: center
        outline: none 
        border 1rem solid $color-success
        &.outline
            background-color: $color-white
            color $color-success
    &--warning
        color white 
        background-color $color-warning
        text-align: center
        outline: none 
        border 1rem solid $color-warning
        &.outline
            background-color: $color-white
            color $color-warning
    &--danger
        color white 
        background-color $color-danger
        text-align: center
        outline: none 
        border 1rem solid $color-danger
        &.outline
            background-color: $color-white
            color $color-danger
    &.is-disabled
        color white 
        background-color $color-info
        text-align: center
        outline: none 
        border 1rem solid $color-info
        &.outline
            background-color: $color-white
            color $color-info
        &:active 
            opacity: 1
    &.is-full
        display: block
        width: 100%
    &:active 
        opacity: .6
    .loading-ico
        animation: anim 2s
        animation-timing-function: linear
        animation-iteration-count:infinite
        display: inline-flex
    @keyframes anim {
        from{
            transform: rotate(0deg)
        }
        to{
            transform: rotate(360deg)
        }
    }