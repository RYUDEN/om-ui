@import './base'
@import './transition.styl';
.om-toast
    top 0
    left 0
    width 100vw
    height 100vh
    position fixed 
    z-index 9999
    display flex
    flex-direction column
    justify-content center
    opacity 1
    animation fade 200ms 
    pointer-events none
    &--mask
        width: 100%
        height 100%
        background #fff
        opacity 0
        z-index 10000
        position: absolute
        pointer-events all
    &--body
        z-index 10001
        margin: 0 auto
        padding: .21058rem .28246rem
        position: relative
        background-color: rgba(0,0,0,0.8)
        color white
        width: 2.25938rem
        border-radius: .28rem
    &--img
        width: 1.05906rem 
        height: 1.05906rem 
        text-align: center
        margin: 0 auto
        .iconfont 
            font-size: 1rem
    &--content
        width: 100%
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin: .10rem 0
        text-align: center
.fade-enter-active,.fade-leave-active
    transition: $fade-linear-transition
.fade-enter,.fade-leave-to
    opacity 0
@keyframes fade {
    from {
        opacity 0
    }
    to{
        opacity 1
    }
}