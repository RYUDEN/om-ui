.om-swiper
    position relative
    width 100%
    height 100%
    padding 0
    overflow hidden
    .om-swiper-wrapper 
        width: 100%
        height 100%
        position relative
        display flex
        .om-swiper-item
            width 100%
            display inline-block
            .om-swiper-content
                width 7.5rem
                height 1.75rem
    &-dots 
        width: 100%
        height 10px
        position: absolute
        bottom: 15px
        text-align: center
    &-dot 
        width: 8px 
        height 8px 
        display: inline-block
        vertical-align: middle
        border-radius: 4px
        color #fff 
        background-color: #fff 
        opacity .6
        margin: 5px
        transition: width 200ms
        &.dot-active
            width: 12px 
            opacity 1