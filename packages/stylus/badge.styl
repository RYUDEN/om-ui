.om-badge
    position relative
    display: inline-block
    
    .om-badge-ico
        display: block 
        position: absolute
        z-index 98
        right -35rem
        top -20rem
        font-size: 18rem
        padding: 3rem 10rem
        background-color #ff4949
        color #fff
        border-top-left-radius: 10rem
        border-top-right-radius: 10rem
        border-bottom-right-radius: 10rem
        &.isdot
            border-radius: 50%
            padding: 10rem
            right -10rem
            top -10rem