.om-slider
    display flex 
    align-items center  
    &__inner
        flex 1
        &--box 
            padding: .3rem .36rem
            .om-slider__full
                position relative
                width: 100%
                height 2px 
                background-color #e9e9e9
                .om-slider__track
                    height 100%
                    background-color #409EFF 
                .om-slider__handler
                    width: 28px
                    height 28px
                    position: absolute
                    margin-top: -14px;
                    margin-left: -14px;
                    background-color #fff
                    border-radius: 50%
                    box-shadow: 0 0 4px rgba(0,0,0,.2)
    &__text
        width: .7rem
        text-align: center